#!/usr/bin/env php
<?php
declare(strict_types=1);

require_once __DIR__ . '/../vendor/autoload.php';

use PhpDoc2Rst\Handler\FileHandler;
use PhpDoc2Rst\Util\InputInspector;

try {
    $root_dir = InputInspector::getRootDir($argv);

    $handler = new FileHandler($root_dir);
    $handler->convertDocsToRsts();
} catch (Exception $e) {
    echo $e->getMessage()."\n";
    exit(1);
}